from random import randint

print("...rock...\n...paper...\n...scissors...\n")
player = input("Player, make your move: ").lower()

comp = randint(0,2)
if comp == 0:
    comp = "rock"
elif comp == 1:
    comp = "paper"
else:
    comp = "scissors"
print(f'Computer:\n{comp}')

if player == comp:
    print("It's a tie!")
elif player == "rock":
    if comp == "scissors":
        print("You win!")
    else:
        print("Computer wins!")
elif player == "paper":
    if comp == "rock":
        print("You win!")
    else:
        print("Computer wins!")
elif player == "scissors":
    if comp == "paper":
        print("You win!")
    else:
        print("Computer wins!")
else:
    print("Please, enter a valid move")
